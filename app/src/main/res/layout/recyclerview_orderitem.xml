<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/listBackground"
    android:id="@+id/layoutOrderItem">

    <TextView
        android:id="@+id/tvOrderItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvOrderItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:gravity="center|right"
        android:text=""
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnNumberDown"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_margin="1dp"
        android:layout_gravity="center_vertical"
        android:text="@string/btnNumberDown"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvItemNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/blue"/>

    <Button
        android:id="@+id/btnNumberUp"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_margin="1dp"
        android:layout_gravity="center_vertical"
        android:text="@string/btnNumberUp"
        android:textSize="20sp"/>


</LinearLayout>
